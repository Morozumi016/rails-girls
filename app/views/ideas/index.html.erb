
<h1>Listing ideas</h1>

<% @ideas.in_groups_of(4) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-3 col-xs-6">
        <h4><%= link_to idea.name, idea %></h4>
        <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>
        <br>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>

